{
  "name": "Open Google US/JP",
  "description": "Press Ctrl+Q to open google.com\nPress Ctrl+Shift+Q to open google.co.jp",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "commands": {
    "google.com": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
       },
      "description": "Open google.com"
    },
    "google.co.jp": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
       },
      "description": "Open google.co.jp"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon48.png"
  }
}
