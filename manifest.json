{
  "name": "Open Google US",
  "description": "Press Ctrl+Q to open google.com in current tab. Press Ctrl+Shift+Q to open in new tab",
  "version": "1.0.1",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab"
  ],
  "commands": {
    "current-tab": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "MacCtrl+Q"
       },
      "description": "Open google.com in current tab"
    },
    "new-tab": {
      "suggested_key": {
        "default": "Ctrl+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
       },
      "description": "Open google.com in new tab"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_action": {
    "default_icon": "icon48.png"
  }
}
